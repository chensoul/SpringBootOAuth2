
server.port=8080

spring.application.name=springbootoauth2cloudgateway
spring.cloud.gateway.routes.id=resources
spring.cloud.gateway.routes.uri=http://localhost:8090/
spring.cloud.gateway.routes.predicates.name=path
spring.cloud.gateway.routes.predicates.args[patterns]=/first/**
spring.cloud.gateway.routes.filters=TokenRelay

spring.security.oauth2.client.registration.gateway.provider=myoauth2
spring.security.oauth2.client.registration.gateway.client-id=client
spring.security.oauth2.client.registration.gateway.client-secret=secret
spring.security.oauth2.client.registration.gateway.authorization-grant=authorization_code
spring.security.oauth2.client.registration.gateway.redirect-uri=http://127.0.0.1:8080/login/oauth2/code/myoauth2
spring.security.oauth2.client.registration.gateway.scope=openid, read

spring.security.oauth2.client.provider.myoauth2.issuer-uri=http://127.0.0.1:9000